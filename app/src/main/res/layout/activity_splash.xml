<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:id="@+id/arrowIV"
        android:layout_width="309dp"
        android:layout_height="388dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/k20Iv"
        android:layout_width="195dp"
        android:layout_height="285dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/arrowIV"
        app:layout_constraintEnd_toEndOf="@+id/arrowIV"
        app:layout_constraintStart_toStartOf="@+id/arrowIV"
        app:layout_constraintTop_toTopOf="@+id/arrowIV"
        app:srcCompat="@drawable/k20" />
</androidx.constraintlayout.widget.ConstraintLayout>